<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context=".PruebaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="361dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:background="@drawable/preciosgeneral"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/precioGeneral"
                    android:layout_width="296dp"
                    android:layout_height="174dp"
                    android:gravity="clip_horizontal|center"
                    android:text="$ 9.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/naranja_UV"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="361dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:background="@drawable/preciosinapam"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/precioINAPAM"
                    android:layout_width="296dp"
                    android:layout_height="174dp"
                    android:gravity="clip_horizontal|center"
                    android:text="$ 6.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/naranja_UV"
                    android:textSize="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="361dp"
                android:layout_height="190dp"
                android:background="@drawable/preciosestudiantes"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/precioIEstudiante"
                    android:layout_width="296dp"
                    android:layout_height="174dp"
                    android:gravity="clip_horizontal|center"
                    android:text="$ 6.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/naranja_UV"
                    android:textSize="50dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="141dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Los precios para estudiantes sólo serán validos de Lunes a Sábado con credencial a mano y resello vigente"
                    android:textAlignment="center"
                    android:textColor="@color/naranja_UV"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personas mayores INAPAM deberan presentar su credencial en mano vigente y sin maltratar"
                    android:textAlignment="center"
                    android:textColor="@color/naranja_UV"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>