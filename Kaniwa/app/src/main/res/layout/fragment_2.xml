<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment2">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="615dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="333dp"
                android:layout_height="349dp"
                android:src="@drawable/loginmockup" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#9C27B0"
                android:drawableTint="#882F2F"
                android:gravity="center"
                android:text="1 - Ingresa con tus credenciales para disfrutar de este servicio"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#345397" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#9C27B0"
                android:drawableTint="#882F2F"
                android:gravity="center"
                android:text="2 - ¿Olvidaste tu contraseña? ¡Cambiala desde aquí!"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#345397" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#9C27B0"
                android:drawableTint="#882F2F"
                android:gravity="center"
                android:text="3 - ¡Únete a nosotros! Registrate con un correo electrónico y contraseña"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#345397" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#9C27B0"
                android:drawableTint="#882F2F"
                android:gravity="center"
                android:text="4 - Si lo prefieres, ¡Ingresa con tu cuenta de Google!"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#345397" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>