<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="309dp"
                android:layout_height="301dp"
                android:src="@drawable/presentaticiontutorial" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="¡Bienvenido a Kaniwá!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/naranja_UV" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="322dp"
                android:layout_height="159dp"
                android:text="Esta aplicación ha sido desarrollada con la finalidad de servir como herramienta para todos los usuarios que inicien su vida universiataria en la ciudad de Xalapa y necesiten ubicar las rutas o paradas que los lleven hacia su escuela."
                android:textAlignment="center"
                android:textColor="@color/azul_UV"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>